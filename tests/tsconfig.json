{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "target": "es2017",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["*.ts"]
}
